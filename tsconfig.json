{
  "include": [
    "src/index.ts",
    "src/components/ReactiveModel/index.ts",
    "src/components/HydratedModel/index.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "outDir": "lib",
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true
  }
}
